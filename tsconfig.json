{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@entities": [
        "database/entities"
      ],
      "@validate": [
        "environments/validation"
      ],
      "@environments": [
        "environments/index"
      ],
      "@enums": [
        "src/common/enums/index"
      ],
      "@decorators": [
        "src/common/decorators/index"
      ],
      "@exceptions": [
        "src/common/exceptions/index"
      ],
      "@interfaces": [
        "src/common/interfaces/index"
      ],
      "@config": [
        "src/config/index"
      ],
      "@utils": [
        "src/common/utils/index"
      ],
      "@dtos": [
        "src/common/dtos/index"
      ]
    }
  }
}